{% macro informationTable(accountTypeClass, accountType, account, fragment, formNumber, itemNumber, totalFees, payNIC, chargeValue, userInput, division, prescriberCode, parentCode, practiceCode, paperType, prescriptionType, chargeStatus, exemptionCategory, quantity, endorsements) %}
    <table class="nhsuk-table" style="margin-bottom: 0;">
        <tr role="row">
            <!-- Account Type Title -->
            <th role="columnheader" class="table-title" scope="col">
                Account Type    
            </th>
            <!-- Account Title -->
            <th role="columnheader" class="table-title" scope="col">
                Account
            </th>
            <!-- Fragment Title -->
            <th role="columnheader" class="table-title" scope="col">
                Fragment
            </th>
            <!-- Form Number Title -->
            <th role="columnheader" class="table-title" scope="col">
                Form Number
            </th>
            <!-- Item Number Title -->
            <th role="columnheader" class="table-title" scope="col">
                Item Number
            </th>
            <!-- Total Fees Title -->
            <th role="columnheader" class="table-title" scope="col">
                Total Fees
            </th>
            <!-- Quantity Title -->
            <th role="columnheader" class="table-title" scope="col">
                Quantity
            </th>
        </tr>

        <tr role="row" class="nhsuk-table__row">
            <!-- Account Type Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                <strong class="{{ accountTypeClass }}">{{ accountType }}</strong>
            </td>
            <!-- Account Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ account }}
            </td>
            <!-- Fragment Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ fragment }}
            </td>
            <!-- Form Number Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ formNumber }}
            </td>
            <!-- Item Number Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                <strong class="nhsuk-tag nhsuk-tag--blue">{{ itemNumber }}</strong>
            </td>
            <!-- Total Fees Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ totalFees }}
            </td>
            <!-- Quantity Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ quantity }}
            </td>
        </tr>

        <tr role="row">
            <!-- Charge Value Title -->
            <th role="columnheader" class="table-title" scope="col">
                Charge Value
            </th>
            <!-- User Input Title -->
            <th role="columnheader" class="table-title" scope="col">
                User Input
            </th>
            <!-- Division Title -->
            <th role="columnheader" class="table-title" scope="col">
                Division
            </th>
            <!-- Prescriber Code Title -->
            <th role="columnheader" class="table-title" scope="col">
                Presc Code
            </th>
            <!-- Parent Code Title -->
            <th role="columnheader" class="table-title" scope="col">
                Parent Code
            </th>
            <!-- Paper Type Title -->
            <th role="columnheader" class="table-title" scope="col">
                Paper
            </th>
            <!-- Pay NIC Title -->
            <th role="columnheader" class="table-title" scope="col">
                Pay NIC
            </th>
        </tr>

        <tr role="row" class="nhsuk-table__row">
            <!-- Charge Value Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ chargeValue }}
            </td>
            <!-- User Input Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ userInput }}
            </td>
            <!-- Division Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ division }}
            </td>
            <!-- Prescriber Code Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ prescriberCode }}
            </td>
            <!-- Parent Code Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ parentCode }}
            </td>
            <!-- Paper Type Title -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ paperType }}
            </td>
            <!-- Pay NIC Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ payNIC }}
            </td>
        </tr>

        <tr role="row">
            <!-- Prescription Type Title -->
            <th role="columnheader" class="table-title" scope="col">
                Prescribing Type
            </th>
            <!-- Charge Status Title -->
            <th role="columnheader" class="table-title" scope="col">
                Charge Status
            </th>
            <!-- Exemption Category Title -->
            <th role="columnheader" class="table-title" scope="col">
                Exemption
            </th>
            <!-- Endorsements Title -->
            <th role="columnheader" class="table-title" scope="col" colspan="2">
                Endorsements
            </th>
            <th role="columnheader" class="table-notes-space" scope="col" rowspan="2" colspan="2" style="padding: 0;">
                <button class="notes-button notes-button__highlighted" type="button" onclick="showFormNotes();">
                    Notes
                </button>
            </th>
        </tr>

        <tr role="row" class="nhsuk-table__row">
            <!-- Prescription Type Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ prescriptionType }}
            </td>
            <!-- Charge Status Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ chargeStatus }}
            </td>
            <!-- Exemption Category Value -->
            <td role="cell" class="nhsuk-table__row table-body">
                {{ exemptionCategory }}
            </td>
            <!-- Endorsement Value -->
            <td role="cell" class="nhsuk-table__row table-body" colspan="2">
                {{ endorsements }}
            </td>
        </tr>
  </table>  
{% endmacro %}

